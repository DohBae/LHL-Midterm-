  <!-- Internal Javascript -->
  <script type="text/javascript" src="/scripts/app.js"></script>

  <title>Create a Quiz</title>
</head>

<body>

  <header>
    <%- include('partials/header') %>
  </header>

  <main class="create-quiz" style="margin: 1em;">
    <h3>Create a Quiz!</h3>
    <form action="/create/new" method="POST">
      <label for="title">TITLE:</label>
      <input type="title" name="title" style="width: 25rem; margin-bottom: 10px;"> </input>
      <select name="public-private">
        <option value="Public">Public</option>
        <option value="Private">Private (Unlisted)</option>
      </select>
      <br>
      <label for="description">DESCRIPTION:</label> <br>
      <textarea type="description" name="description" style="width: 37.5rem; margin-bottom: 10px;"></textarea> <br>
      <label for="img-url">IMAGE URL:</label>
      <input type="img-url" name="img-url" style="width: 25rem; margin-bottom: 10px;"> </input> <br>

      <button type="submit" class="btn btn-dark" id="form-submit-btn">Submit</button>
    </form>
    <button class="btn btn-light" id="add-question-btn">Add Question</button>
  </main>

</body>

</html>
